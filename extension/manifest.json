{
  "manifest_version": 3,
  "name": "LeetCode Template Inserter",
  "version": "1.3",
  "description": "Create, manage, and insert code templates into the LeetCode editor.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "*://leetcode.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["vendor/monaco-editor/min/vs/base/worker/*.js",
                  "vendor/monaco-editor/min/vs/language/*/*.js"],
    "matches": ["<all_urls>"]
  }
]
}